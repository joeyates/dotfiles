#!/usr/bin/env bash

PG_VERSION=${1:-12}
VOLUME=${2:-pg$PG_VERSION}

mkdir -p /tmp/docker-pg
chmod 0777 /tmp/docker-pg

docker \
  run \
  --publish 5432:5432 \
  --rm \
  --volume /tmp/docker-pg:/tmp \
  --volume $VOLUME:/var/lib/postgresql/data \
  -e POSTGRES_HOST_AUTH_METHOD=trust \
  postgres:$PG_VERSION
