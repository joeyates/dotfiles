#!/usr/bin/env bash

set -e
set -u
set -o pipefail

type=${1:-help};

function usage() (
  echo "'f' for films, 'm' for music or 't' for TV"
)

case $type in
  help)
    usage;
    exit 0;
    ;;
  f|film|F|Film)
    directory=Films;
    ;;
  m|music|M|Music)
    directory=Music;
    ;;
  t|tv|T|TV)
    directory=TV;
    ;;
  *)
    usage;
    exit 1;
    ;;
esac

/Applications/VLC.app/Contents/MacOS/VLC --playlist-tree --start-paused sftp://pi@raspberrypi.local:/media/files/$directory/
