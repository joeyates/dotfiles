if type jgy-grep > /dev/null ; then
  alias a='jgy-grep'
fi
if type jgy-grep-case-insensitive > /dev/null ; then
  alias ai='jgy-grep-case-insensitive'
fi
if type jgy-grep-word > /dev/null ; then
  alias aw='jgy-grep-word'
fi
if type jgy-grep-word-case-insensitive > /dev/null ; then
  alias awi='jgy-grep-word-case-insensitive'
fi

alias b=bundle
alias c=jgy-clear-screen
alias cig='curl -IXGET'
alias dw=jgy-word-diff
alias e=jgy-edit
alias en='jgy-edit-no-session'
alias f=jgy-find-files
alias fd=jgy-find-directories
alias ffd=jgy-find-files-and-directories
alias fo=jgy-find-open-first
alias g='git'
alias h='history'
alias less='less -R'
alias l='ls -lF'
alias l1='ls -1A'
alias la='ls -lA'
alias lh='ls -lhA'
alias ltr='ls -lAtr'
alias p=pass

if which trash-put >/dev/null ; then
  alias t='trash-put'
fi

alias r=rails
alias rdbm='rails db:migrate'
alias rdbmt='rails db:migrate RAILS_ENV=test'
alias rpc='pry -r ./config/environment'
alias rs='rails server -b 0.0.0.0'
alias rspf='rspec --only-failures'
alias rswb='rails server webrick'
alias ta='tmux attach'
alias tg='tig `git rev-parse --abbrev-ref HEAD`'
alias tga='tig --all'
alias tmr='jgy-tmux-start'

function jgy-alias-exists() {
  alias $1 2>/dev/null >/dev/null
}

# dotfiles: https://gitlab.com/joeyates/jgy-dotfiles
