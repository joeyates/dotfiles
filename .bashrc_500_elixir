# kerl

export KERL_BUILD_BACKEND=git
export OTP_GITHUB_URL="https://github.com/erlang/otp"
export ERL_AFLAGS="-kernel shell_history enabled"
export KERL_ERLANG_VERSION=21.1.1

activate_default_erlang_path=/home/joe/.kerl/installs/$KERL_ERLANG_VERSION/activate

if [ -s "$activate_default_erlang_path" ]
then
  . $activate_default_erlang_path
fi

# kiex

export KIEX_ELIXIR_VERSION=elixir-1.7.3

[[ -s "$HOME/.kiex/scripts/kiex" ]] && source "$HOME/.kiex/scripts/kiex"

kiex default $KIEX_ELIXIR_VERSION > /dev/null 2>&1
kiex use $KIEX_ELIXIR_VERSION > /dev/null

# dotfiles: https://gitlab.com/joeyates/jgy-dotfiles
