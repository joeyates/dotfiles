if [ ! -f /etc/bash_completion ] ; then
  return
fi

if shopt -oq posix; then
  return
fi

# General completion setup

. /etc/bash_completion

# Git

if jgy-alias-exists g ;
then
  _xfunc git __git_complete g _git
fi

# pass password manager

pass_completion_path=~/opt/password-store/src/completion/pass.bash-completion

if [ -f $pass_completion_path ] ;
then
  . ~/opt/password-store/src/completion/pass.bash-completion
  if jgy-alias-exists p ;
  then
    complete -o filenames -F _pass p
  fi
fi
