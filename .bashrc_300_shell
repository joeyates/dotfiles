# terminal type

# macOS: iTerm2 and tmux work best with xterm-color
export TERM=xterm-color

# history
HISTCONTROL=ignoredups:ignorespace
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000

# prompt
PROMPT_DIRTRIM=3
export PS1="\w>"

shopt -s checkwinsize

# Include the current directory in **/* glob expansions
shopt -s globstar

# Doesn't load previous sessions
export EDITOR=jgy-edit-no-session

export LESS="--no-init --RAW-CONTROL-CHARS --quit-if-one-screen"
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# Collect directory stats for z
case "$OSTYPE" in
  "darwin"*)
    . /opt/homebrew/etc/profile.d/z.sh
    ;;
  "linux"*)
    . "$HOME/bin/z"
    ;;
esac

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'
fi

# Local Variables:
# mode: sh
# End:

# vim: set filetype=sh :

# dotfiles: https://gitlab.com/joeyates/jgy-dotfiles
